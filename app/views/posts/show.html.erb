<div class="post_body">
    <p class="post_title">
      <%= @post.title %>
    </p>
    <hr>
    <p>
      <%= @post.text %>
    </p>

</div>

    <% if @post.comments.any? %>
        <h2 class="comment_title">Komentarze</h2>
        <% @post.comments.each do |comment| %>
        <div class="comment_body">
            <p>
              <%= comment.commenter %>
            </p>
               <hr>
            <p>
              <%= comment.body %>
            </p>
        </div>
        <% end %>
    <% end %>

<h2 class="comment_begin">Dodaj komentarz</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :Komentujący %><br />
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :Treść %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "Utwórz komentarz", class: "btn btn-success" %>
    </p>
<% end %>

<%= link_to 'Edytuj post', edit_post_path(@post) %>
<%= link_to 'Wróc do wszystkich postów', posts_path %>
