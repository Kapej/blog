<h1>Edytuj post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit "Edytuj", class: "btn btn-success" %>
    </p>
<% end %>

<%= link_to 'Wróć', posts_path %>