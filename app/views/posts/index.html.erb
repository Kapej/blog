<table>
  <caption><h1>Spis postów</h1></caption>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3">Akcje</th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', post_path(post),
                        method: :delete, data: { confirm: 'Jesteś pewny?' }, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Nowy post', new_post_path %>